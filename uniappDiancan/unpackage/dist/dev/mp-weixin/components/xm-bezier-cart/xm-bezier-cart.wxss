.badge__bezier {
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: .8125rem;
	border-radius: 40rpx;
	width: 48rpx !important;
	height: 48rpx !important;
}
.animate__bezier{
    opacity: 1;
    z-index: 990;
    transition: opacity .1s, -webkit-transform cubic-bezier(0,0,0,0) .5s;
    transition: opacity .1s, transform cubic-bezier(0,0,0,0) .5s;
    transition: opacity .1s, transform cubic-bezier(0,0,0,0) .5s, -webkit-transform cubic-bezier(0,0,0,0) .5s;
}
.animate__bezier_y{
    opacity: 1;
    z-index: 990;
    transition: opacity .1s, -webkit-transform cubic-bezier(.3,-.2,1,0) .5s;
    transition: opacity .1s, transform cubic-bezier(.3,-.2,1,0) .5s;
    transition: opacity .1s, transform cubic-bezier(.3,-.2,1,0) .5s, -webkit-transform cubic-bezier(.3,-.2,1,0) .5s;
}
.add__box{
    position: relative;
    margin-left: auto;
    flex-shrink: 0;
}
.plus__img{
    width: 100%;
    height: 100%;
    margin-left: auto;
