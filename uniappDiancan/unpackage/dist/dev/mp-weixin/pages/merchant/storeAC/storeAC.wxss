}
.acimg {
  height: 100vh;
  background-color: #fff;
}
.acimg image {
  width: 750rpx;
  height: 450rpx;
  margin-top: 400rpx;
}
.fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 0 30rpx 0;
  box-sizing: border-box;
}
.fixed .btn {
  width: 671rpx;
  height: 80rpx;
  background: #E40030;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  margin: 0 auto;
}
.card_two {
  width: 750rpx;
  height: 350rpx;
  background: #FFFFFF;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.card_two .update {
  margin: 20rpx 0 0;
  line-height: 136rpx;
}
.card_two .update image {
  width: 136rpx;
  height: 136rpx;
  margin-right: 50rpx;
}
.title {
  font-size: 28rpx;
  color: #2F3337;
  margin: 20rpx 24rpx;
}
.line {
  border-bottom: 1rpx solid #f4f4f4;
}
.tips {
  width: 750rpx;
  height: 161rpx;
  background: rgba(221, 180, 92, 0.1);
  padding: 35rpx 40rpx;
  box-sizing: border-box;
}
.tips .top {
  font-size: 34rpx;
  color: #E40030;
  margin-bottom: 20rpx;
  text-align: center;
}
.tips .bom {
  font-size: 24rpx;
  color: #2F3337;
  text-align: center;
}
.card {
  background-color: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.card .card_item {
  padding: 30rpx 0;
  box-sizing: border-box;
}
.card .card_item .left {
  width: 200rpx;
}
.card .card_item .left text {
  color: red;
}
.card_thr {
  width: 750rpx;
  background: #FFFFFF;
  padding: 40rpx 44rpx;
  box-sizing: border-box;
}
.card_thr .content image {
  width: 326rpx;
  height: 260rpx;
  margin: 20rpx 0 0;
}

