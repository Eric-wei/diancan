page {
  padding: 24rpx 24rpx 200rpx;
  box-sizing: border-box;
  background: #FAFAFA;
}
.mt20 {
  margin-top: 20rpx;
}
.ml20 {
  margin-left: 20rpx;
}
.addcard {
  width: 700rpx;
  height: 129rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 44rpx 0rpx 44rpx 250rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 40rpx;
  text-align: center;
  z-index: 999;
}
.addcard .text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 16rpx;
}
.card {
  margin-bottom: 20rpx;
  width: 700rpx;
  height: 258rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 9;
}
.card .img {
  width: 240rpx;
  height: 200rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 0;
}
.card .num {
  font-size: 46rpx;
  color: #FFFFFF;
  margin-top: 24rpx;
}
.card .left .top {
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.card .left .bom {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 10rpx;
}
.card .right {
  font-size: 28rpx;
  width: 125rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: #FFFFFF;
  z-index: 9;
}

