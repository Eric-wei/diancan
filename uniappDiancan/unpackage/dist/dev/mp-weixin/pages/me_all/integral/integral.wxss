.lcrice {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.pointsproducte {
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  position: relative;
}
.hade {
  width: 100%;
  height: 419rpx;
  position: relative;
}
.hade .hade_img {
  position: absolute;
  top: 0;
  width: 100%;
  height: 440rpx;
  z-index: 0;
}
.hade .nav-tab {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.hade .nav-tab .nav-tab_left {
  padding: 40rpx;
}
.hade .nav-tab .nav-tab_content {
  font-size: 34rpx;
  font-weight: 500;
  color: #FFFFFF;
  z-index: 2;
  padding-right: 100rpx;
}
.hade .integral_count {
  font-weight: bold;
  font-size: 64rpx;
  color: #9B551A;
  margin-top: 50rpx;
  position: relative;
  padding: 0 32rpx;
  box-sizing: border-box;
  line-height: 1;
}
.hade .integral_count .integral_countimg {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
}
.hade .integral_count .integral_countimg2 {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}
.hade .integral_count text {
  width: 100%;
  text-align: center;
  z-index: 2;
}
.hade .screen {
  position: relative;
  padding: 0 32rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}
.hade .screen .screen_content {
  margin-right: 22rpx;
}
.hade .screen .screen_content text {
  font-size: 24rpx;
  color: rgba(155, 85, 26, 0.6);
}
.content_order {
  width: 95%;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  align-content: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.content_order .content_order_box {
  width: 340rpx;
  border-radius: 14rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.content_order .content_order_box .content_order_box_img {
  width: 340rpx;
  height: 250rpx;
}
.content_order .content_order_box .content_order_box_bottom {
  height: 140rpx;
  background: #FFFFFF;
  padding: 0 20rpx;
}
.content_order .content_order_box .content_order_box_bottom .content_order_box_bottom_1 {
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #383838;
  display: inline-block;
  margin: 20rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content_order .content_order_box .content_order_box_bottom .content_order_box_bottom_2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content_order .content_order_box .content_order_box_bottom .content_order_box_bottom_2 text:nth-child(1) {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FA5151;
}
.content_order .content_order_box .content_order_box_bottom .content_order_box_bottom_2 text:nth-child(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9F9F9F;
}

