page {
  min-height: 100vh;
  padding: 26rpx 0;
  box-sizing: border-box;
  background: #FAFAFA;
}
.wximg {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.fixedBtn {
  position: fixed;
  background-color: #fff;
  bottom: 0;
  left: 0;
  right: 0;
}
.fixedBtn .fixedBtn_price {
  font-size: 46rpx;
  color: #E40030;
  line-height: 100rpx;
  margin: 0 0 0 50rpx;
}
.btn {
  width: 240rpx;
  height: 100rpx;
  background-color: #E40030;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
.box {
  width: 94%;
  border-radius: 10rpx;
  background-color: #E40030;
  margin: 20rpx auto;
  padding: 40rpx;
  box-sizing: border-box;
  color: #fff;
  text-align: center;
}
.box .text_3 {
  text-align: right;
  display: flex;
  justify-content: flex-end;
}
.box .text_1 {
  font-size: 30rpx;
}
.box .text_2 {
  margin-top: 36rpx;
  font-size: 44rpx;
}
.price {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}
.price .price_title {
  font-size: 26rpx;
  color: #868B96;
  margin-bottom: 20rpx;
}
.price .price_title .price_title_text1 {
  font-size: 36rpx;
  color: #000;
}
.price .price_box {
  width: 212rpx;
  height: 267rpx;
  background: #FDF6EC;
  border-radius: 15rpx;
  text-align: center;
  margin-right: 25rpx;
  position: relative;
  display: inline-block;
  margin-top: 20rpx;
}
.price .price_box .price_box_1 {
  height: 47rpx;
  background: #7F4700;
  border-radius: 16rpx 0rpx 14rpx 0rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFF9F6;
  line-height: 47rpx;
  text-align: center;
  position: absolute;
  top: -20rpx;
  left: -1rpx;
  display: flex;
  align-items: center;
  padding-right: 10rpx;
}
.price .price_box .price_box_1 image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}
.price .price_box .price_box_2 {
  font-size: 30rpx;
  font-weight: 400;
  color: #868B96;
  margin-top: 40rpx;
}
.price .price_box .price_box_3 {
  font-size: 48rpx;
  font-weight: 600;
  color: #835814;
  margin-top: 20rpx;
}
.price .price_box .price_box_4 {
  font-size: 22rpx;
  font-weight: 400;
  color: #A16421;
  margin-top: 20rpx;
}

