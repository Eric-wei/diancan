.store {
  width: 660rpx;
  background: #FFFFFF;
  border-radius: 18rpx;
  margin: 20rpx auto;
  padding: 32rpx 20rpx;
}
.store .store_left {
  padding: 20rpx 32rpx 0;
}
.store .store_left .store_left_1 {
  font-size: 32rpx;
  font-weight: 400;
  color: #393939;
}
.store .store_left .store_left_2 {
  font-size: 24rpx;
  font-weight: 400;
  color: #979797;
}
.store .store_content .store_content_text {
  font-size: 24rpx;
  margin-top: 16rpx;
}
.store .store_content image {
  width: 103rpx;
  height: 106rpx;
}
.addBtn {
  width: 100%;
  height: 31rpx;
  font-weight: 400;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
.store_down {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store_down .store_down_left {
  width: 150rpx;
  height: 53rpx;
  border-radius: 7rpx;
  border: 1rpx solid #00CCFF;
  font-size: 22rpx;
  color: #00C8FF;
  line-height: 31rpx;
  text-align: center;
  line-height: 53rpx;
}
.store_down .store_down_right text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: #1D1D1D;
}
.store_down .store_down_right text:nth-child(2) {
  font-size: 32rpx;
  font-weight: 500;
  color: #1D1D1D;
}
.refund {
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 18rpx;
  margin: 22rpx auto;
  color: #333333;
  font-size: 32rpx;
  padding: 36rpx 0;
  display: block;
  text-align: center;
}
 .u-modal__content {
  padding-top: 0 !important;
}
.slot-content {
  padding-top: 20rpx;
}
.content {
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 18rpx;
  margin: 0rpx auto;
  margin-top: 20rpx;
}
.content .content_text {
  padding: 20rpx 40rpx;
}
.content .content_text .content_text_title {
  border-bottom: 1rpx solid #F7F7F7;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  padding-bottom: 20rpx;
}
.content .content_text .content_text_time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}
.content .content_text .content_text_time text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: #9D9D9D;
}
.content .content_text .content_text_time text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: #282828;
}
.content .content_text .content_text_location {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}
.content .content_text .content_text_location text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: #9D9D9D;
}
.content .content_text .content_text_location text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: #282828;
}
.content .content_text .record_pay {
  display: flex;
  flex-direction: row-reverse;
  padding-top: 20rpx;
  border-top: 1rpx dashed #EFEFEF;
}
.content .content_text .record_pay view {
  width: 155rpx;
  height: 55rpx;
  background: #00C8FF;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #F9FDFF;
  line-height: 55rpx;
  text-align: center;
  margin-right: 10rpx;
}
.addTitle {
  font-size: 32rpx;
  color: #232323;
  padding-bottom: 12rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F2F2F2;
}
.content_detail {
  display: flex;
  justify-content: space-between;
  padding: 25rpx;
}
.content_detail .content_left {
  display: flex;
}
.content_detail .content_left .content_left_img {
  width: 103rpx;
  height: 106rpx;
  margin-right: 16rpx;
}
.content_detail .content_left .content_left_img image {
  border-radius: 8rpx;
}
.content_detail .content_left .content_left_title {
  margin-left: 10rpx;
}
.content_detail .content_left .content_left_title .content_left_title_1 {
  font-size: 32rpx;
  font-weight: 400;
  color: #353535;
}
.content_detail .content_left .content_left_title .content_left_title_2 {
  font-size: 24rpx;
  font-weight: 400;
  color: #989898;
  margin: 4rpx 0;
}
.content_detail .content_right {
  text-align: right;
}
.content_detail .content_right .content_right_price {
  font-size: 32rpx;
  font-weight: 400;
  color: #353535;
}
.content_detail .content_right .content_right_count {
  font-size: 24rpx;
  font-weight: 400;
  color: #989898;
  margin-top: 10rpx;
}

