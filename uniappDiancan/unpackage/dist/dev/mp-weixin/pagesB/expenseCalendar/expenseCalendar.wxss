.box_content {
  width: 702rpx;
  margin: 0 auto;
}
.box_content .hade {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}
.box_content .hade .hade_left text:nth-child(1) {
  font-size: 60rpx;
  font-weight: 600;
  color: #05B6F6;
}
.box_content .hade .hade_left text:nth-child(2) {
  font-size: 26rpx;
  font-weight: 400;
  color: #05B6F6;
}
.box_content .hade .hade_right {
  display: flex;
  align-items: center;
}
.box_content .hade .hade_right view:nth-child(1) {
  width: 29rpx;
  height: 32rpx;
}
.box_content .hade .hade_right view:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: #000000;
}
.box_content .record {
  min-height: 900rpx;
  height: auto !important;
  height: 900rpx;
  background: #FFFFFF;
  padding: 30rpx 0;
  border-radius: 16rpx;
}
.box_content .record .record_title {
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #000101;
  margin-bottom: 30rpx;
}
.record_content {
  border-radius: 20rpx;
  background-color: #fff;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 34rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #EBEBEB;
  margin-bottom: 30rpx;
}
.record_content .record_content_left view:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: #000101;
}
.record_content .record_content_left view:nth-child(2) {
  font-size: 20rpx;
  font-weight: 400;
  color: #9A9A9A;
  margin-top: 10rpx;
}
.record_content .record_content_right {
  font-size: 32rpx;
  font-weight: 500;
  color: #E40030;
}

